package eu.stefaner.elasticlists.data {	import com.modestmaps.core.MapExtent;	import com.modestmaps.geo.Location;	import org.osflash.thunderbolt.Logger;	public class GeoFacetValue extends FacetValue {		//--------------------------------------		// CLASS CONSTANTS		//--------------------------------------				//--------------------------------------		// INSTANCE VARIABLES		//--------------------------------------		public var lat : Number;		public var long : Number;		public var location : Location;
		/**		 *	@Constructor		 */		public function GeoFacetValue(name : String, lat : Number = 0, long : Number = 0) : void {			super(name);			this.lat = lat;			this.long = long;			if(!this.lat && !this.long) {				try {					// try to read from name if in format <lat>,<long>					var l : Array = name.split(",");					this.lat = Number(l[0]);					this.long = Number(l[1]);				}catch(e : Error) {					Logger.warn("could not read geofacetvalue coords");				}							}			this.location = new Location(this.lat, this.long);		}		public function isInRegion(b : MapExtent) : Boolean {			return (this.long >= b.west && this.long <= b.east && this.lat <= b.north && this.lat >= b.south);		};	}}